#include <Arduino.h>

void setup() {
  // Inicia a comunicação serial na velocidade que já configuramos
  Serial.begin(115200);

  // Inicializa o gerador de números aleatórios.
  // Tempo em microssegundos como seed para
  // garantir que os números sejam diferentes a cada reinicialização.
  randomSeed(micros());
}

void loop() {
  // 1. Gera um número aleatório para simular a temperatura.
  // Gerar um valor entre 20.00 e 29.99.
  // random(2000, 3000) gera um inteiro (ex: 2542)
  // Dividir por 100.0 converte para float (ex: 25.42)
  float temperatura_fake = random(2000, 3000) / 100.0;

  // 2. Envia o dado pela Serial.
  // NOTA IMPORTANTE:
  // Enviar *apenas* o número, seguido por uma nova linha (println).
  // Não envie texto como "Temp: 25.42". Isso torna a leitura
  // no LabVIEW desnecessariamente complicada.
  Serial.println(temperatura_fake);

  // 3. Espera 1 segundo antes de enviar o próximo dado.
  // Ajustar esse valor para testar o "buffer" do LabVIEW.
  // (ex: delay(100) para 10 amostras/seg)
  delay(1000);
}
